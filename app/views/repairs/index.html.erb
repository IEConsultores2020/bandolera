<p id="notice"><%= notice %></p>

<h1>Listing Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Type repair</th>
      <th>Details</th>
      <th>Contractors</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Cost</th>
      <th>Warranty</th>
      <th>Date repair</th>
      <th>User</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.type_repair %></td>
        <td><%= repair.details %></td>
        <td><%= repair.contractors %></td>
        <td><%= repair.email %></td>
        <td><%= repair.phone %></td>
        <td><%= repair.cost %></td>
        <td><%= repair.warranty %></td>
        <td><%= repair.date_repair %></td>
        <td><%= repair.user %></td>
        <td><%= repair.property %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

