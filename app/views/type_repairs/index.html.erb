<h1>Listing Type Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_repairs.each do |type_repair| %>
      <tr>
        <td><%= type_repair.name %></td>
        <td><%= type_repair.description %></td>
        <td><%= link_to 'Show', type_repair %></td>
        <td><%= link_to 'Edit', edit_type_repair_path(type_repair) %></td>
        <td><%= link_to 'Destroy', type_repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

