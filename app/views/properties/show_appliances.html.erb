<% provide(:title, @property.landlord) %>
<div class="container-fluid">
    <div class="row" style="background-color:lightcyan">
        <div class="col-md-6">
          <p><strong>Property</strong></p>
          <p><strong>Address:</strong>
          <%= @property.address %></p>
          <p><strong>Zipcode:</strong>
          <%= @property.zipcode %></p>
          <p><strong>Name of Landlord:</strong>
          <%= @property.landlord %></p>
          <p><strong>Phone #:</strong>
          <%= @property.phone %></p>
          <p><strong>Email:</strong>
          <%= @property.email %></p>
      </div>
    </div> 
  <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Appliances</h1>
        <%= link_to 'New Appliance', new_appliance_property_path(@property),  class: "btn btn-primary"%></br>
      <br><p>If you want to change an appliance to active or inactive,
        go to edit and chek or uncheck the select box.</p></br>
        <% if @property.appliances.any? %>               
             <strong>Active Appliances</strong></br>
            <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Gadget</th>
                <th>Description </th>
                <th>Acquisition date</th>
                <th>Purchase price</th>
                <th>Months Warranty</th>
                <th>Contact number</th>
                <th>Contact email</th>
                <th>Invoice</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>
              <%= render @active_appliances %>
            </table></br>
      <% if @inactive_appliances.any? %>
      <strong>Obsolete Appliances</strong></br>     

            <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Gadget</th>
                <th>Description </th>
                <th>Acquisition date</th>
                <th>Purchase price</th>
                <th>Months Warranty</th>
                <th>Contact number</th>
                <th>Contact email</th>
                <th>Invoice</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>
              <%= render @inactive_appliances %>
            </table>
        <% end %>    
        <% end %>
      </div>
    </div>
 </div>