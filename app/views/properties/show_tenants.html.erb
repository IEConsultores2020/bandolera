<% provide(:title, @property.landlord) %>
<div class="container-fluid">
    <div class="row" style="background-color:lightcyan;">
        <div class="col-md-6">
          <p><strong>Property</strong></p>
          <p><strong>Address:</strong>
          <%= @property.address %></p>
          <p><strong>Zipcode:</strong>
          <%= @property.zipcode %></p>
          <p><strong>Name of Landlord:</strong>
          <%= @property.landlord %></p>
          <p><strong>Phone #:</strong>
          <%= @property.phone %></p>
          <p><strong>Email:</strong>
          <%= @property.email %></p>
      </div>
    </div> 
  <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-12">
        <h1>Tenant</h1>
        <%= link_to 'New Tenant', new_tenant_property_path(@property),  class: "btn btn-primary"%></br>
      <br><p>If you want to change an tenant to active or inactive,
        go to edit and chek or uncheck the select box called leasing.</p></br>
        <% if @property.tenants.any? %>               
             <strong>Active Tenant</strong></br>
            <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Monthly Rent</th>
                <th>Monthly Administration</th>
                <th>Begin date</th>
                <th>End date</th>
                <th>name</th>
                <th>phone</th>
                <th>email</th>
                <th>leasing contract</th>
                <th>Payments</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>              
              <%= render @active_tenants %>
            </table></br>
      <% if @inactive_tenants.any? %>
      <strong>History rent</strong></br>     

            <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Monthly Rent</th>
                <th>Monthly Administration</th>
                <th>Begin date</th>
                <th>End date</th>
                <th>name</th>
                <th>phone</th>
                <th>email</th>
                <th>leasing contract</th>
                <th>Payments</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>
              <%= render @inactive_tenants %>
            </table>
        <% end %>    
        <% end %>
      </div>
    </div>
 </div>