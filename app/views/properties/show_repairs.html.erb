<% provide(:title, @property.landlord) %>
<div class="container-fluid">
    <div class="row" style="background-color:lightcyan;">
        <div class="col-md-6">
          <p><strong>Property</strong></p>
          <p><strong>Address:</strong>
          <%= @property.address %></p>
          <p><strong>Zipcode:</strong>
          <%= @property.zipcode %></p>
          <p><strong>Name of Landlord:</strong>
          <%= @property.landlord %></p>
          <p><strong>Phone #:</strong>
          <%= @property.phone %></p>
          <p><strong>Email:</strong>
          <%= @property.email %></p>
      </div>
    </div> 
<p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-12">
        <h1>Listing Repairs</h1>
        <%= link_to 'New Repair', new_repair_property_path(@property),  class: "btn btn-primary"%></br>
      
        <% if @property.appliances.any? %>               
            
            <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Type repair</th>
                <th>Details </th>
                <th>Contractors</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Cost</th>
                <th>Warranty (months)</th>
                <th>Date repair</th>
                <th>Purchase order</th>
                <th colspan="3">Options</th>
              </tr>
            </thead>
              <%= render @repairs %>
            </table></br>
         <% end %> 
      </div>
    </div>
 </div>

