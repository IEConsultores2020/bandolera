<!DOCTYPE html>
<html>
<head>
  <title>ES - Articulos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>

</head>
<body>
  <%= render 'layouts/header' %>
   <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(articulos_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Buscar ArtÃ­culos" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %> 

  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(articulos_path, :method => "get", class: "navbar-form", id: "search-form-componente") do %>
    <div class="input-append">
      <%= text_field_tag :search_componente, params[:search_componente], class: "span2", placeholder: "Filtar por componente" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %> 


   <div class="container">
      <%= yield %>
      <%= render 'layouts/footer' %>
   </div>

</body>
</html>