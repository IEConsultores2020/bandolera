
<h1>Listado Componentes</h1>
<% if can? :create, Componente %>
<%= link_to 'Nuevo Componente', new_componente_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Vendedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @componentes.each do |componente| %>
      <tr>
        <td><%= componente.codigo %></td>
        <td><%= componente.nombre %></td>
        <td><%= componente.descripcion %></td>
        <td><%= componente.user_name %></td>      
        <td><%= link_to 'Mostrar', componente %></td>
        <td>
          <% if can? :update, componente %>
          <%= link_to 'Editar', edit_componente_path(componente) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, componente %>
          <%= link_to 'Eliminar', componente, method: :delete, data: { confirm: 'Esta seguro de Eliminar?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>